[calendars]
[[work]]
path = ~/.calendars/work/calendar
type = calendar
color = dark blue
readonly = true

[[personal]]
path = ~/.calendars/personal
type = calendar
color = yellow
readonly = false

[[red]]
path = ~/.calendars/red
type = calendar
color = dark red
readonly = true

[locale]
timeformat = %H:%M
dateformat = %Y-%m-%d
longdateformat = %Y-%m-%d
datetimeformat = %Y-%m-%d %H:%M
longdatetimeformat = %Y-%m-%d %H:%M
weeknumbers = left
firstweekday = 0

[default]
default_command= calendar
default_calendar= personal
show_all_days= true
highlight_event_days= true
timedelta= 17d
