function sp_has_feature() {
  FEATURE="$1"

  which $FEATURE > /dev/null 2>&1
  WHICH_FEATURE=$?
  hash $FEATURE > /dev/null 2>&1
  HASH_FEATURE=$?

  if [ $WHICH_FEATURE -eq $HASH_FEATURE ]; then
    if [ $WHICH_FEATURE -eq 0 ]; then
      return 0
    fi
  fi
  return 1
}
