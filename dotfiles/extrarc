# to allow cron jobs to read keyring
function sp_setup_dbus() {
  local X_dbus=$HOME/.Xdbus
  if [ ! -e $X_dbus ]; then
    touch $X_dbus
    chmod 600 $X_dbus
  fi
  local SP_ENV="`env | grep DBUS_SESSION_BUS_ADDRESS`"
  if [[ $? -eq 0 ]]; then
    if [[ ! -z $SP_ENV ]]; then
      echo "$SP_ENV" > $X_dbus
      echo 'export DBUS_SESSION_BUS_ADDRESS' >> $X_dbus
    fi
  fi
}

