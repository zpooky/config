    alias sp-combinations="sp_open_sputil $sputil_util/combinations.h"
    alias sp-options="sp_open_sputil $sputil_util/options.h"
  fi

  sp_repo_list "${sputil_problem}" "problem"
  sp_repo_list "${sputil_np}" "np"

}
