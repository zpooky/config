{
  "python.linting.enabled": false,
  "json.format.enable": false,
  "coc.preferences.extensionUpdateCheck": "never",
  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp", "cuda", "objc", "objcpp"],
      "rootPatterns": [
        ".ccls",
        "compile_commands.json",
        ".vim/",
        ".git/",
        ".hg/"
      ]
    },
    "metals": {
      "command": "metals-vim",
      "filetypes": ["scala", "sbt"],
      "rootPatterns": [
        "build.sbt",
        ".git/",
        ".hg/"
      ]
    }
  }
}
